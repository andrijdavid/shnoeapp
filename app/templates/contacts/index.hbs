{{outlet}}

<div class="page-content contacts-content">
  <div class="list-block contacts-block">
    <div class="list-group">
      <ul>
        {{#each group in contactsByFirstLetter}}
          <li class="list-group-title">{{group.value}}</li>
          {{#each contact in group.items}}
          <li>
            <div class="item-content">
              <div class="item-inner">
                <div class="item-title">{{contact.name}}</div>
                <button {{ action 'startChat' contact}} class='button item-button'>Start chat</button>
              </div>
            </div>
          </li>
          {{/each}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
